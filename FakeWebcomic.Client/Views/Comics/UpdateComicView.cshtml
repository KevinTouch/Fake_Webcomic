@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FakeWebcomic.Client.Models.ComicPageViewModel

@{
    ViewData["WebcomicTitle"] = Model.ComicBook.Title;
    ViewData["PageTitle"] = "@Model.PageTitle [Update]";
}

@*opens in a separate tab so you don't lose your form if it doesn't work*@
<form target="_blank" asp-action="post" asp-controller="Comics" asp-action="UpdatePage"
    asp-route-webcomicname="@Model.ComicBook.Title" asp-route-pagenumber="@Model.PageNumber" method="post"
    asp-antiforgery="true">

    @Html.Partial("NewPageView",Model)
    <button type="submit">Update Page</button>
</form>
