@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FakeWebcomic.Client.Models.ComicPageViewModel

@{
    Layout = "_Layout";
}

@{
    ViewData["WebcomicTitle"] = Model.ComicBook.Title;
    ViewData["PageTitle"] = Model.PageTitle;
}

<section name="comic">
    <h1 class="justify-content-center">@Model.PageNumber. @Model.PageTitle</h1>

    <nav class="navbar navbar-extend-sm justify-content-center" name="topnav">
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetPage" asp-route-webcomicname="@Model.ComicBook.Title" asp-route-pagenumber="@Model.FirstPageNumber" method="get"><<</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetPage" asp-route-webcomicname="@Model.WebcomicId" asp-route-pagenumber="@Model.PreviousPageNumber" method="get"><</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetPage" asp-route-webcomicname="@Model.ComicBook.Title" asp-route-pagenumber="@Model.RandomPageNumber" method="get">?</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetArchive" asp-route-webcomicname="@Model.ComicBook.Title" method="get">||</a>
        <p></p>
        <p></p>
        <!--No next or last page, because this is it-->
    </nav>

    <img src="@Model.Image" alt="@Model.AltText" name="comicimg"/>
    <!--No link to next comic, for sure-->

    <nav class="navbar navbar-extend-md justify-content-center" name="botnav">
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetPage" asp-route-webcomicname="@Model.ComicBook.Title" asp-route-pagenumber="@Model.FirstPageNumber" method="get"><< first</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetPage" asp-route-webcomicname="@Model.WebcomicId" asp-route-pagenumber="@Model.PreviousPageNumber" method="get">< previous</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetPage" asp-route-webcomicname="@Model.ComicBook.Title" asp-route-pagenumber="@Model.RandomPageNumber" method="get">random</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Comics" asp-action="GetArchive" asp-route-webcomicname="@Model.ComicBook.Title" method="get">archive</a>
        <p></p>
        <p></p>
        <!--No next or last page, because this is it-->
    </nav>
</section>
