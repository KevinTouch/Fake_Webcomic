@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FakeWebcomic.Client.Models.ComicBookViewModel

@{
    ViewData["WebcomicTitle"] = Model.Title;
    ViewData["PageTitle"] = "About";
}

@*open success/fail view in new tab*@
<form target="_blank" asp-area="" asp-controller="Comics" asp-action="UpdateAbout" method="post" asp-antiforgery="true">
    @Html.Partial("AboutFormView",Model)
    <button type="submit">Update Webcomic!</button>
</form>
